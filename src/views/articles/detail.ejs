<%- include('../layouts/main', { body: `
<div class="max-w-4xl mx-auto">
  <!-- Back Button -->
  <a href="/articles" class="inline-flex items-center text-gray-600 hover:text-primary-600 mb-6">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Articles
  </a>

  <!-- Article Header -->
  <article class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <img 
      src="${article.thumbnail || 'https://picsum.photos/seed/' + article.id + '/1200/600'}" 
      alt="${article.title}"
      class="w-full h-64 md:h-96 object-cover"
    >
    
    <div class="p-6 md:p-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">${article.title}</h1>
      
      <div class="flex items-center text-sm text-gray-500 mb-6 pb-6 border-b border-gray-200">
        <span>${new Date(article.publishedAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
        <span class="mx-2">•</span>
        <span>${article.viewCount || 0} views</span>
        ${article.author ? `
        <span class="mx-2">•</span>
        <span>By ${article.author.name}</span>
        ` : ''}
      </div>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        ${article.content}
      </div>
    </div>
  </article>

  <!-- Navigation -->
  <div class="mt-8 flex justify-between">
    <a href="/articles" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      All Articles
    </a>
  </div>
</div>
` }) %>
