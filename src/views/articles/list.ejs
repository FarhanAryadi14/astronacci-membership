<%- include('../layouts/main', { body: `
<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Articles</h1>
      <p class="text-gray-600 mt-1">
        You can access <span class="font-semibold text-primary-600">${accessibleCount}</span> of ${totalCount} articles
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
        ${membershipType === 'C' ? 'bg-purple-100 text-purple-800' : 
          membershipType === 'B' ? 'bg-blue-100 text-blue-800' : 
          'bg-gray-100 text-gray-800'}">
        ${membershipType === 'C' ? 'Unlimited' : membershipType === 'B' ? 'Premium' : 'Basic'} Member
      </span>
    </div>
  </div>

  <!-- Articles Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    ${articles.map(article => `
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden group ${!article.isAccessible ? 'opacity-75' : ''}">
      <div class="relative">
        <img 
          src="${article.thumbnail || 'https://picsum.photos/seed/' + article.id + '/800/400'}" 
          alt="${article.title}"
          class="w-full h-48 object-cover ${!article.isAccessible ? 'filter grayscale' : ''}"
        >
        ${!article.isAccessible ? `
        <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
          <div class="text-center text-white">
            <svg class="w-10 h-10 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <span class="text-sm font-medium">Upgrade to Access</span>
          </div>
        </div>
        ` : ''}
        <div class="absolute top-3 left-3">
          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-white bg-opacity-90 text-gray-700">
            #${article.position}
          </span>
        </div>
      </div>
      <div class="p-5">
        <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
          ${article.title}
        </h3>
        <p class="text-gray-600 text-sm mb-4 line-clamp-2">${article.excerpt || ''}</p>
        <div class="flex items-center justify-between">
          <span class="text-xs text-gray-500">
            ${new Date(article.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
          </span>
          ${article.isAccessible ? `
          <a href="/articles/${article.slug}" class="inline-flex items-center text-sm font-medium text-primary-600 hover:text-primary-700">
            Read More
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          ` : `
          <a href="/membership" class="inline-flex items-center text-sm font-medium text-gray-400 hover:text-primary-600">
            Upgrade
            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </a>
          `}
        </div>
      </div>
    </div>
    `).join('')}
  </div>

  ${membershipType !== 'C' ? `
  <!-- Upgrade Banner -->
  <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl p-6 text-white text-center">
    <h3 class="text-xl font-bold mb-2">Want to access all ${totalCount} articles?</h3>
    <p class="text-primary-100 mb-4">Upgrade your membership to unlock unlimited content</p>
    <a href="/membership" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-medium rounded-lg hover:bg-primary-50 transition-colors">
      View Membership Plans
      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
  ` : ''}
</div>
` }) %>
