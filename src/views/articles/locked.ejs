<%- include('../layouts/main', { body: `
<div class="max-w-2xl mx-auto text-center py-12">
  <!-- Locked Icon -->
  <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
    </svg>
  </div>

  <h1 class="text-2xl font-bold text-gray-900 mb-2">Content Locked</h1>
  <p class="text-gray-600 mb-6">
    Your current membership (<span class="font-semibold">${membershipType === 'A' ? 'Basic' : 'Premium'}</span>) doesn't include access to this article.
  </p>

  <!-- Article Preview -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-8">
    <img 
      src="${article.thumbnail || 'https://picsum.photos/800/400'}" 
      alt="${article.title}"
      class="w-full h-48 object-cover filter grayscale opacity-50"
    >
    <div class="p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-2">${article.title}</h2>
      <p class="text-gray-500">Upgrade to ${requiredType === 'B' ? 'Premium' : 'Unlimited'} to access this content</p>
    </div>
  </div>

  <!-- Upgrade CTA -->
  <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl p-8 text-white">
    <h3 class="text-xl font-bold mb-2">Upgrade Your Membership</h3>
    <p class="text-primary-100 mb-6">Get access to more articles and videos with a higher membership tier</p>
    <a href="/membership" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-medium rounded-lg hover:bg-primary-50 transition-colors">
      View Membership Plans
      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>

  <a href="/articles" class="inline-flex items-center text-gray-600 hover:text-primary-600 mt-8">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Back to Articles
  </a>
</div>
` }) %>
