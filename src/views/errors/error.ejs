<%- include('../layouts/main', { body: `
<div class="min-h-[60vh] flex items-center justify-center">
  <div class="text-center max-w-lg">
    <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-gray-900">Something went wrong</h1>
    <p class="text-gray-600 mt-2">${message || 'An unexpected error occurred.'}</p>
    
    ${stack ? `
    <details class="mt-6 text-left bg-gray-100 rounded-lg p-4">
      <summary class="cursor-pointer text-sm font-medium text-gray-700">Error Details</summary>
      <pre class="mt-2 text-xs text-gray-600 overflow-auto">${stack}</pre>
    </details>
    ` : ''}

    <a href="/" class="inline-flex items-center mt-6 px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Go Home
    </a>
  </div>
</div>
` }) %>
